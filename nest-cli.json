{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "amortization": {
      "type": "library",
      "root": "libs/amortization",
      "entryFile": "index",
      "sourceRoot": "libs/amortization/src",
      "compilerOptions": {
        "tsConfigPath": "libs/amortization/tsconfig.lib.json"
      }
    }
  }
}